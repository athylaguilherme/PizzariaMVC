@model Pizzaria.Models.ViewModel.Request.PostSaboresDTO

@{
    ViewData["Title"] = "Cadastrar Ingrediente";
}
<div class="container">
    <div class="row text">
        <div class="col-md-8 offset-2">
            <p>
                <h1>Cadastrar Ingrediente</h1>
            </p>
            <div class="row">
                <div class="col-md-8 offset-2">
                    <form asp-action="Criar">
                        <div asp-validation-summary="All" class="text-danger"></div>
                        <div class="form-group">
                            <label asp-for="Nome" class="control-label"></label>
                            <input asp-for="Nome" class="form-control" />
                        </div>
                        <div class="form-group">
                            <label asp-for="FotoUrl" class="control-label"></label>
                            <input asp-for="FotoUrl" class="form-control" />
                        </div>

                        <div class="form-group">
                            <input type="submit" value="Criar" class="btn btn-success float-right" />
                            <a class="btn btn-secondary" asp-action="Index">Listar Todos</a>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>