@model Sabor

@{
    ViewData["Title"] = "Atualizar Sabor";
}

<h1 class="text-light">Atualizar Sabor</h1>

<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Atualizar">
            <input type="hidden" asp-for="Id" />
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div>
                    <img class="img-thumbnail" src="@Model.FotoUrl" />
                </div>  
            <div class="form-group">
                <label asp-for="FotoUrl" class="control-label text-light"></label>
                <input asp-for="FotoUrl" class="form-control" />

                <label asp-for="Nome" class="control-label text-light"></label>
                <input asp-for="Nome" class="form-control" />
                <span asp-validation-for="Nome" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Salvar" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Lista de Cinemas</a>
</div>