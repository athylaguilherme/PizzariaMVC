@model Sabor

@{
    ViewData["Title"] = "Deletar Sabor";
}

<div class="row text">
    <div class="col-md-8 offset-2">
        <p>
           
            <img src="@Model.FotoUrl" class="card-img-top" alt="...">
        </p>
        <div class="row">

            <div class="col-md-8 offset-2">
                <form asp-action="ConfirmarDeletar">
                    <input type="hidden" asp-for="Id" />
                    <input type="submit" value="Confirmar" class="btn btn-outline-danger float-right" />
                </form>
                <a class="btn btn-outline-secondary" asp-action="Index">Listar Todos</a>
            </div>
        </div>
    </div>
</div>