@model Sabor

@{
    ViewData["Title"] = "Deletar Ingrediente";
}
<div class="container">
    <div class="row text">
        <div class="col-md-4 offset-2">
            <p>
                <h1>Deletar do Ingrediente @Model.Nome</h1>
                <img src="@Model.FotoUrl" class="card-img-top" alt="...">
            </p>
            <div class="row">

                <div class="col-md-8 offset-2">
                    <form asp-action="ConfirmarDeletar">
                        <input type="hidden" asp-for="Id" />
                        <input type="submit" value="Confirmar" class="btn btn-danger float-right" />
                    </form>
                    <a class="btn btn-secondary" asp-action="Index">Listar Todos</a>
                </div>
            </div>
        </div>
    </div>
</div>