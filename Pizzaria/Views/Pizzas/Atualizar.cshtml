@model Pizzaria.Models.ViewModel.Request.PostPizzaVM

@{
    ViewData["Title"] = "Atualizar Pizza";
}

<div class="row align-items-center">
    <div class="col-md-8 offset-md-3 ">
        <p>
            <h4>Atualizar Pizza</h4>
        </p>

        <div class="row">
            <div class="col-md-8">
                <form asp-action="Atualizar">
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>

                    <div class="row">
                        <div class="col-md-6">
                            <div class="form-group">
                                <label asp-for="Nome" class="control-label"></label>
                                <input asp-for="Nome" class="form-control" />
                                <span asp-validation-for="Nome" class="text-danger"></span>
                            </div>
                            <br />
                            <div class="form-group">
                                <label asp-for="Preco" class="control-label"></label>
                                <input asp-for="Preco" class="form-control" />
                                <span asp-validation-for="Preco" class="text-danger"></span>
                            </div>
                            <br />
                            <div class="form-group">
                                <label asp-for="FotoUrl" class="control-label"></label>
                                <input asp-for="FotoUrl" class="form-control" />
                                <span asp-validation-for="FotoUrl" class="text-danger"></span>
                            </div>

                        </div>
                        <br />
                        <br />
                        <div class="col-md-6">
                            <div class="form-group">
                                <label asp-for="SaboresId" class="control-label"></label>
                                <select asp-for="SaboresId" class="form-control" asp-items="ViewBag.Sabores"></select>
                                <span asp-validation-for="SaboresId" class="text-danger"></span>
                            </div>
                            <br />
                            <div class="form-group">
                                <label asp-for="TamanhoId" class="control-label"></label>
                                <select asp-for="TamanhoId" class="form-control" asp-items="ViewBag.Tamanhos" multiple></select>
                                <span asp-validation-for="TamanhoId" class="text-danger"></span>
                            </div>

                        </div>
                        <br />

                        <div class="form-group">
                            <input type="submit" value="Atualizar" class="btn btn-success float-right" />
                            <a class="btn btn-secondary mr-3" asp-action="Index">Mostrar Todos</a>
                        </div>
                </form>
            </div>
        </div>
    </div>
</div>