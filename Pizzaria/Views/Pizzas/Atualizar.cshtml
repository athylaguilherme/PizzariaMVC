@model Pizzaria.Models.ViewModel.Request.PostPizzaVM

@{
    ViewData["Title"] = "Adicionar Pizza";
}

<div class="row text">
    <div class="col-md-8 offset-2">
        <p>
            <h1>Criar nova Pizza</h1>
        </p>
        <div class="row">
            <div class="col-md-8 offset-2">
                <form asp-action="Atualizar">
                    <div asp-validation-summary="All" class="text-danger"></div>
                    <div class="form-group">
                        <label asp-for="Nome" class="control-label"></label>
                        <input asp-for="Nome" class="form-control" />
                    </div>
                    <div class="form-group">
                        <label asp-for="FotoUrl" class="control-label"></label>
                        <input asp-for="FotoUrl" class="form-control" />
                    </div>
                    <div class="form-group">
                        <label asp-for="Preco" class="control-label"></label>
                        <input asp-for="Preco" class="form-control" />
                    </div>
                    <div class="form-group">
                        <label asp-for="SaboresId" class="control-label"></label>
                        <input asp-for="SaboresId" class="form-control" />
                    </div>
                    <div class="form-group">
                        <label asp-for="TamanhoId" class="control-label"></label>
                        <input asp-for="TamanhoId" class="form-control" />
                    </div>

                    <div class="form-group">
                        <input type="submit" value="Criar" class="btn btn-outline-success float-right" />
                        <a class="btn btn-outline-secondary" asp-action="Index">Listar Todos</a>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>