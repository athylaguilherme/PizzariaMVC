@model Pizza

@{
    ViewData["Title"] = "Deletar Pizza";
}

<div class="row text">
    <div class="col-md-8 offset-2">
        <p>
            <h1>Deletar Pizza @Model.Nome</h1>
        </p>
        <div class="row">
            <div class="col-md-4 offset-2">
                <div class="form-group">
                    <label asp-for="Nome" class="control-label"></label>
                    <input asp-for="Nome" class="form-control" />
                </div>
                <div class="form-group">
                    <label asp-for="FotoUrl" class="control-label"></label>
                    <input asp-for="FotoUrl" class="form-control" />
                </div>
                <div class="form-group">
                    <label asp-for="Preco" class="control-label"></label>
                    <input asp-for="Preco" class="form-control" />
                </div>

                <div class="form-group">
                    <form asp-action="Deletar">
                        <input type="hidden" asp-for="Id" />
                        <input type="submit" value="Confirmar" class="btn btn-danger float-right" />
                    </form>
                    <a class="btn btn-secondary" asp-action="Index">Listar Todos</a>
                </div>

            </div>
        </div>
    </div>
</div>