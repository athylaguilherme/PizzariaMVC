@model IEnumerable<Pizza>

<div class="Container">
    @{ ViewData["Title"] = "Índice Pizza";
    }

    <h2 class="text-center"> Pizza -  <a asp-action="Criar" class="btn btn-dark">Criar</a></h2>
  
    <div class="row row-cols-2 row-cols-md-3">

        @foreach (var pizza in Model)
        {
            <div class="col mb-4">
                <div class="card h-100">
                    <img src="@pizza.FotoUrl" class="card-img-top" alt="...">
                    <div class="card-body">
                        <h5 class="card-title">@pizza.Nome</h5>
                        <a asp-action="Atualizar" asp-route-id="@pizza.Id" class="btn btn-success mt-1"><i class="fa-solid fa-pen-to-square"></i>Atualizar</a>
                        <a asp-action="Detalhes" asp-route-id="@pizza.Id" class="btn btn-primary mt-1"><i class="fa-solid fa-eye"></i>Detalhes</a>
                        <a asp-action="Deletar" asp-route-id="@pizza.Id" class="btn btn-danger mt-1"><i class="fa-solid fa-trash"></i>Excluir</a>
                    </div>
                </div>
            </div>
        }

    </div>

</div>